<h1>Listing app_ideas</h1>

<table>
  <thead>
    <tr>
      <th>Tweet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_ideas.each do |app_idea| %>
      <tr>
        <td><%= app_idea.tweet %></td>
        <td><%= link_to 'Show', app_idea %></td>
        <td><%= link_to 'Edit', edit_app_idea_path(app_idea) %></td>
        <td><%= link_to 'Destroy', app_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App idea', new_app_idea_path %>
