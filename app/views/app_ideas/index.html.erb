<div class="container">
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
      <% @app_ideas.each do |app_idea| %>
        <div class="row">
          <div class="col-sm-1">
            <div class="post-vote-button--arrow" style="text-align:center; margin-top:17px">
              <svg width="11" height="10" viewBox="0 0 11 10" xmlns="http://www.w3.org/2000/svg">
                <% if app_idea.user_voted_for(current_user) %>
                  <path d="M.524 7.42C-.318 8.846.342 10 2 10h7c1.657 0 2.317-1.156 1.476-2.58L6.516.72c-.56-.95-1.473-.947-2.032 0l-3.96 6.7z" fill="#5b9aee" fill-rule="evenodd"></path>
                <% else %>
                  <path d="M.524 7.42C-.318 8.846.342 10 2 10h7c1.657 0 2.317-1.156 1.476-2.58L6.516.72c-.56-.95-1.473-.947-2.032 0l-3.96 6.7z" fill="#123132" fill-rule="evenodd"></path>
                <% end %>
              </svg>
            </div>
            <% if app_idea.user_voted_for(current_user) %>
              <div class="vote-button-count" style="text-align: center; font-size: 100%; color:#5b9aee;">
              1
              </div>
            <% else %>
              <div class="vote-button-count" style="text-align: center; font-size: 100%; color:#000000;">
              1
              </div>
            <% end %>
          </div>
          <div class="col-sm-11">
            <div class="answer">
              <p>
                <%= link_to app_idea.tweet, app_idea %> 
                <% if can? :manage, app_idea %>
                --- <%= link_to 'Edit', edit_app_idea_path(app_idea) %>, <%= link_to 'Destroy', app_idea, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <br>
      <% end %>
      
  <br>

    
  </div>
</div>

